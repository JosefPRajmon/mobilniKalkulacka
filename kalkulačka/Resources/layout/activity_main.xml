<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20px"
        android:text="@string/title_home" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="364.0dp"
        android:layout_height="60.5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

    <RelativeLayout
        android:layout_width="356.5dp"
        android:layout_height="244.0dp"
        android:layout_below="@id/message"
        android:id="@+id/calculateLayout"
        android:clickable="false"
        android:visibility="visible">

        <TextView
            android:text="rychrost"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="80dp"
            android:layout_height="@dimen/input_space"
            android:layout_below="@id/message"
            android:id="@+id/textView1"
            android:layout_marginTop="10dp"/>
        <TextView
            android:text="čas"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_space"
            android:layout_below="@id/textView1"
            android:id="@+id/textView2"
            android:layout_marginTop="0.0dp"
            android:layout_marginRight="78.0dp" />

        <TextView
            android:text="vzdálenost"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_space"
            android:layout_below="@id/textView2"
            android:id="@+id/convertButton"
            android:layout_marginTop="0.0dp"
            android:layout_marginRight="30.0dp" />
        <EditText
            android:inputType="number"
            android:layout_width="251dp"
            android:layout_height="@dimen/input_space"
            android:layout_below="@id/speedValue"
            android:id="@+id/timeValue"
            android:layout_toRightOf="@id/textView2"
            android:text="" />
        <EditText
            android:inputType="number"
            android:layout_width="251dp"
            android:layout_height="@dimen/input_space"
            android:layout_toRightOf="@id/textView1"
            android:id="@+id/speedValue"
            android:layout_marginTop="0.0dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/message" />
        <EditText
            android:inputType="number"
            android:layout_width="251dp"
            android:layout_height="@dimen/input_space"
            android:layout_below="@id/timeValue"
            android:id="@+id/distanceValue"
            android:layout_toRightOf="@id/convertButton" />
        <Button
            android:text="přepočítat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/convertButton"
            android:id="@+id/calculateButton"
            android:onClick=""/>
        <TextView
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/distanceValue"
            android:id="@+id/calculateError"
            android:layout_toRightOf="@id/calculateButton"
            android:layout_marginTop="21.5dp"
            android:layout_marginLeft="47.0dp" />

    </RelativeLayout>
    <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="324.5dp"
        android:layout_height="424.5dp"
        android:id="@+id/tableLayout"
        android:visibility="invisible"
        android:layout_below="@id/message">
        <TableRow
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/tableRow1"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            

            <TextView
                android:text="1:1"
                android:id="@+id/textView1.1"
                android:minWidth="25dp"
                />
            <TextView
                android:text="1:2"
                android:id="@+id/textView1.2"
                android:minWidth="25dp" />
            <TextView
                android:text="1:3"
                android:id="@+id/textView1.3"
                android:minWidth="25dp" />
            <TextView
                android:text="1:4"
                android:id="@+id/textView1.4" 
                android:paddingVertical="10px"
                
                android:minWidth="25dp"/>
        </TableRow>
        <TableRow
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/tableRow2"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:text="1:1"
                android:id="@+id/textView2.1" />
            <TextView
                android:text="1:2"
                android:id="@+id/textView2.2" />
            <TextView
                android:text="1:3"
                android:id="@+id/textView2.3" />
            <TextView
                android:text="1:4"
                android:id="@+id/textView2.4" />
        </TableRow>
        <TableRow
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/tableRow3"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:text="3:1"
                android:id="@+id/textView3.1" />
            <TextView
                android:text="3:2"
                android:id="@+id/textView3.2" />
            <TextView
                android:text="3:3"
                android:id="@+id/textView3.3" />
            <TextView
                android:text="3:4"
                android:id="@+id/textView3.4" />
        </TableRow>
        <TableRow
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/tableRow4"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:text="4:1"
                android:id="@+id/textView4.1" />
            <TextView
                android:text="4:2"
                android:id="@+id/textView4.2" />
            <TextView
                android:text="4:3"
                android:id="@+id/textView4.3" />
            <TextView
                android:text="4:4"
                android:id="@+id/textView4.4" />
        </TableRow>
        


    </TableLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="351.5dp"
        android:layout_height="425.0dp"
        android:layout_below="@id/message"
        android:id="@+id/aboutLayout"
        android:visibility="invisible">
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="189.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:text="Kdyby pod balónky nebyla sytě zelenkavá tráva, ale třeba suchá silnice či beton, možná by bylo vidět jejich barevné stíny - to jak přes poloprůsvitné barevné balónky prochází ostré sluneční paprsky. Jenže kvůli všudy přítomné trávě jsou stíny balónků sotva vidět, natož aby šlo rozeznat, jakou barvu tyto stíny mají. Uvidět tak balónky náhodný kolemjdoucí, jistě by si pomyslel, že už tu takhle poletují snad tisíc let. Stále si víceméně drží výšku a ani do stran se příliš nepohybují. Proti slunci to vypadá, že se slunce pohybuje k západu rychleji než balónky, a možná to tak skutečně je. Nejeden filozof by mohl tvrdit, že balónky se sluncem závodí, ale fyzikové by to jistě vyvrátili. Z fyzikálního pohledu totiž balónky působí zcela nezajímavě. Nejvíc bezpochyby zaujmou děti - jedna malá holčička zrovna včera div nebrečela, že by snad balónky mohly prasknout. A co teprve ta stuha.Stuha, kterou je každý z trojice balónků uvázán, aby se nevypustil. Očividně je uvázaná dostatečně pevně, protože balónky skutečně neucházejí. To ale není nic zvláštního. Překvapit by však mohl fakt, že nikdo, snad krom toho, kdo balónky k obloze vypustil, netuší, jakou má ona stuha barvu. Je totiž tak lesklá, že za světla se v ní odráží nebe a za tmy zase není vidět vůbec. Když svítí slunce tak silně jako nyní, tak se stuha třpytí jako kapka rosy a jen málokdo vydrží dívat se na ni přímo déle než pár chvil. Jak vlastně vypadají ony balónky?. Ptají se často lidé." />
    </RelativeLayout>

    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="359.5dp"
        android:layout_height="440.0dp"
        android:layout_below="@id/message"
        android:id="@+id/notesLayout"
        android:visibility="invisible">
        <AutoCompleteTextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="333.5dp"
            android:layout_height="129.5dp"
            android:id="@+id/noteSaveInput"
            android:text=" " />

        <Button
            android:text="Uložit poznámku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteSaveInput"
            android:id="@+id/saveNoteButton"
            android:onClick=""/>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveNoteButton"
            android:id="@+id/saveNodeLayout" />

    </RelativeLayout>
    <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/feedbackLayout" >
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView13"
                android:id="@+id/textView14" />
        
            <EditText
                android:inputType="text"
                android:layout_width="251dp"
                android:layout_height="@dimen/input_space"
                android:id="@+id/tittleValue"
                android:layout_marginTop="0.0dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/textView13" />

        <EditText
            android:inputType="text"
            android:layout_width="251dp"
            android:layout_height="@dimen/input_space"
            android:id="@+id/feedbackvalue"
            android:layout_marginTop="39.5dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/textView14" />
            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            
                android:id="@+id/feedbackButton" />


     </RelativeLayout>
</RelativeLayout>
